FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh   dynamicPointDisplacementFvMesh;

solvers
{
    box
    {
        motionSolverLibs ( floaterMotion );

        motionSolver    floaterMeshMotionSolver;

        floaterMeshMotionSolverCoeffs
        {
            patches         (box);
            innerDistance   0.075;
            outerDistance   0.4;
            separateTransRotPointDisplacement true;
            horDir1         (1 0 0);
            horDir2         (0 1 0);
            verDir          (0 0 1);
            horPos1         4 (-2 -1 1 2);
            horPos2         4 (-1e10 -1e9 1e9 1e10);
//            verPosX         $horPos1;
            verPos         4 (-0.39 -0.21 0.19 0.39);

            linDirs   (1 0 1);
            rotDirs   (0 1 0);
            addedMassModel  pisoAddedMass;
            MaddUpdateFreq  1;

            restraints
            {
/*
                moorDynR1
                {
                    floaterMotionRestraint moorDynR1;
                }
*/
                moorDynR2_body
                {
                    floaterMotionRestraint  moorDynR2;
                    couplingMode        "BODY";
                    inputFile           "Mooring/lines_v2_bodyC.txt";
                    vtkPrefix           "mdv2_body";
                    writeMooringVTK     true;
                    vtkStartTime        0;
                    outerCorrector      1;
                }

            }
        }
    }
}


