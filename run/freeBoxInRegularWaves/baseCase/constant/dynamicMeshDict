FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh       dynamicFloaterMotionSolversFvMesh;

addedMassModel      pisoAddedMass;

solvers
{
    myBox
    {

        motionSolverLibs    (floaterMotion);

        motionSolver        floaterMotion;

        floaterMotionCoeffs
        {
            patches         (box);
            innerDistance   0.02;
            outerDistance   1.5;
            distStretch     (1 0 0 0 1 0 0 0 5);

            mass            12;
            centreOfMass    (0 0 0); // Relative to CoR in floaterMotionState
            momentOfInertia ( 1 0 0 0.15106368 0 1 ); //Wrt CoM

            linDirs   (1 0 1);
            rotDirs   (0 1 0);
            MaddUpdateFreq  1;

            constraints{}

            restraints{}
        }
    }

}
